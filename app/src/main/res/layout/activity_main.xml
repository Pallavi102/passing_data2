<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".MainActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NAME"
        android:textSize="30sp"
        android:id="@+id/tvEnterName"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:id="@+id/etName"
        android:maxLines="1"
        android:singleLine="true"
        android:inputType="text"
        android:layout_below="@id/tvEnterName"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/enter_your_class_name"
        android:textSize="30sp"
        android:id="@+id/tvClass"
        android:layout_below="@id/etName"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:id="@+id/etClass"
        android:maxLines="1"
        android:singleLine="true"
        android:layout_below="@id/tvClass"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/about_you"
        android:textSize="30sp"
        android:id="@+id/tvAboutYou"
        android:layout_below="@id/etClass"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etAbout"
        android:layout_below="@id/tvAboutYou"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/confrim"
        android:id="@+id/btnConfrim"

        android:layout_marginStart="130dp"
        android:layout_marginTop="30dp"
        android:layout_below="@id/etAbout"

        android:layout_alignParentStart="true"
        />

</RelativeLayout>